{
  "permissions": {
    "allow": [
      "Bash(npm install)",
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(git *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(bash *)",
      "mcp__atlassian__*",
      "mcp__github__*",
      "mcp__gutt-mcp-remote__*"
    ],
    "deny": []
  },
  "mcpServers": {},
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node hooks/sessionstart-setup.cjs"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node hooks/pre-task-memory.cjs"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__gutt-mcp-remote__*",
        "hooks": [
          {
            "type": "command",
            "command": "node hooks/post-memory-ops.cjs"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node hooks/subagent-start-memory.cjs"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node hooks/subagent-plan-review.cjs"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node hooks/stop-lessons.cjs"
          }
        ]
      }
    ]
  }
}
