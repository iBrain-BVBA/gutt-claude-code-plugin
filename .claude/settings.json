{
  "statusLine": {
    "type": "command",
    "command": "./hooks/statusline.cjs"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ./hooks/user-prompt-submit.cjs"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ./hooks/stop-lessons.cjs"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node ./hooks/post-tool-lint.cjs"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node ./hooks/post-task-lessons.cjs"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node ./hooks/pre-task-memory.cjs"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm install)",
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(git *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(bash *)",
      "mcp__atlassian__*",
      "mcp__github__*",
      "mcp__gutt-mcp-remote__*"
    ],
    "deny": []
  },
  "mcpServers": {}
}
