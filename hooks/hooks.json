{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ./user-prompt-submit.cjs"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ./stop-lessons.cjs"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node ./post-tool-lint.cjs"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node ./post-task-lessons.cjs"
          }
        ]
      },
      {
        "matcher": "mcp__gutt-mcp-remote__add_memory|mcp__gutt-mcp-remote__search_memory_facts|mcp__gutt-mcp-remote__fetch_lessons_learned",
        "hooks": [
          {
            "type": "command",
            "command": "node ./post-memory-ops.cjs"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node ./pre-task-memory.cjs"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ./statusline.cjs"
  }
}
