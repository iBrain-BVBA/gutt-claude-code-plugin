{
  "name": "gutt-claude-code-plugin",
  "version": "1.3.0",
  "description": "GUTT Plugin for Claude Code - Memory integration and enhanced tooling",
  "private": true,
  "type": "module",
  "files": [
    "agents",
    "commands",
    "hooks",
    "skills",
    ".claude-plugin",
    "config.json.example",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node --test tests/**/*.test.js tests/**/*.test.cjs",
    "test:all": "node --test tests/**/*.test.js tests/**/*.test.cjs && node tests/test-all-hooks.cjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
