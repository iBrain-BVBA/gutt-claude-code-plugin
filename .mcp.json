  "mcpServers": {
    "gutt-mcp-remote": {
      "command": "npx",
      "args": ["-y", "@gutt/mcp-remote"],
      "env": {
        "GUTT_API_KEY": "${GUTT_API_KEY}",
        "GUTT_ENDPOINT": "${GUTT_ENDPOINT}"
      }
    }
  }
}
